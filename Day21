#2125.number-of-laser-beams-in-a-bank

class Solution:
    def numberOfBeams(self, bank: List[str]) -> int:
        device_counts = []

        # Count devices per row
        for row in bank:
            count = row.count('1')
            if count > 0:
                device_counts.append(count)

        # Calculate beams between consecutive non-zero rows
        total_beams = 0
        for i in range(1, len(device_counts)):
            total_beams += device_counts[i] * device_counts[i-1]

        return total_beams



