#3397.maximum-number-of-distinct-elements-after-operations

class Solution:
    def maxDistinctElements(self, nums: List[int], k: int) -> int:
        nums.sort()
        current = -float('inf')
        count = 0

        for num in nums:
            # Choose the smallest number >= current and >= num - k
            val = max(current, num - k)

            # If it's still within [num - k, num + k], we can use it
            if val <= num + k:
                count += 1
                current = val + 1  # Move to next distinct possible value

        return count

        
